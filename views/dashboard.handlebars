<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">Post Text</label>
      <input id="post-text" name="post-text" />
    </div>
    <button type="submit" class="btn-submit">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="mt-4">
  <h2>Your Posts</h2>
  <ul class="list-inline">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a class="p-1 m-2" href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>